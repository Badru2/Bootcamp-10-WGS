<div
  id="create-modal"
  tabindex="-1"
  aria-hidden="true" 
  class="hidden mx-auto overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
  <div class="relative p-4 w-full max-w-md max-h-full mx-auto">
    <div class="relative bg-white rounded-lg shadow">
      <div
        class="flex items-center justify-between p-4 md:p-5 border-b rounded-t"
      >
        <h3 class="text-xl font-semibold text-gray-900">Create new contact</h3>
        <button
          type="button"
          class="end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center"
          data-modal-hide="create-modal"
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
            />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <div class="p-4 md:p-5">
        <% if (errorMessages && errorMessages.length > 0) { %>
        <div class="mb-4">
          <ul class="list-disc list-inside text-red-500">
            <% errorMessages.forEach(error => { %>
            <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <form action="/create" method="post" class="space-y-3">
          <div>
            <label for="name">Nama: <span class="text-red-500">*</span></label>
            <input
              type="text"
              name="name"
              id="name"
              value="<%= old.name || '' %>"
              required
              class="w-full text-black"
            />
          </div>
          <div>
            <label for="email"
              >Email: <span class="text-red-500">*</span></label
            >
            <input
              type="email"
              name="email"
              id="email"
              value="<%= old.email || '' %>"
              required
              class="w-full text-black"
            />
          </div>
          <div>
            <label for="mobilePhone">Nomor Telepon:</label>
            <input
              type="number"
              name="mobile_phone"
              id="mobilePhone"
              value="<%= old.mobile_phone || '' %>"
              class="w-full text-black"
            />
          </div>
          <button
            type="submit"
            class="py-2 px-5 bg-blue-500 rounded-md font-bold text-white"
          >
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
