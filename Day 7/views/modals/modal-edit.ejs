<!-- Modal Edit -->
<% contacts.forEach(contact => { %>
<div
  id="edit-modal-<%= contact.id %>"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full"
>
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow">
      <!-- Modal header -->
      <div
        class="flex items-center justify-between p-4 md:p-5 border-b rounded-t border-gray-600"
      >
        <h3 class="text-xl font-semibold text-gray-900">
          Edit <b><%= contact.name %></b>
        </h3>
        <button
          type="button"
          class="text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center hover:text-white"
          data-modal-hide="default-modal"
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
            />
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="px-5 py-3">
        <form
          action="/contact/update/<%= contact.id %>"
          method="POST"
          class="space-y-3"
        >
          <div>
            <label for="name">Nama:</label>
            <input
              type="text"
              value="<%= contact.name %>"
              name="name"
              id="name"
              required
              class="w-full"
            />
          </div>

          <div>
            <label for="email">Email:</label>
            <input
              type="email"
              value="<%= contact.email %>"
              name="email"
              id="email"
              required
              class="w-full"
            />
          </div>

          <div>
            <label for="mobilePhone">Nomor Telepon: </label>
            <input
              type="number"
              value="<%= contact.mobilePhone %>"
              name="mobilePhone"
              id="mobilePhone"
              class="w-full"
            />
          </div>

          <button
            type="submit"
            class="bg-yellow-300 px-5 py-2 rounded-sm text-white"
          >
            Edit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<% }) %>
