<span class="text-red-500"> <%= error %> </span>

<form
  action="/contact/update/<%= contact.id %>"
  method="POST"
  class="space-y-3"
>
  <div>
    <label for="name">Nama:</label>
    <input
      type="text"
      value="<%= (typeof formData !== 'undefined' && editContactId == contact.id) ? formData.name : contact.name %>"
      name="name"
      id="name"
      required
      class="w-full"
    />
  </div>

  <div>
    <label for="email">Email:</label>
    <input
      type="email"
      value="<%= contact.email %>"
      name="email"
      id="email"
      required
      class="w-full"
    />
  </div>

  <div>
    <label for="mobilePhone">Nomor Telepon: </label>
    <input
      type="number"
      value="<%= contact.mobile_phone %>"
      name="mobile_phone"
      id="mobilePhone"
      class="w-full"
    />
  </div>

  <button type="submit" class="bg-yellow-300 px-5 py-1 rounded-sm text-white">
    Edit
  </button>

  <a href="/" class="px-5 py-1.5 bg-blue-500 rounded-sm font-bold text-white"
    >Back</a
  >
</form>
